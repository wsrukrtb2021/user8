<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lapushok"
        xmlns:User_Control="clr-namespace:Lapushok.User_Control" x:Class="Lapushok.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="666" Width="1238" Loaded="Window_Loaded">
    <Grid>

        <ScrollViewer x:Name="Sqroll" VerticalScrollBarVisibility="Hidden" HorizontalAlignment="Left" Height="615" Margin="0,10,0,0" VerticalAlignment="Top" Width="792">
            <WrapPanel x:Name="outpanel"/>
        </ScrollViewer>

        <Button x:Name="Right" Content="&gt;" HorizontalAlignment="Left" Margin="821,10,0,0" VerticalAlignment="Top" Width="75" Click="Right_Click"/>
        <Button x:Name="Left" Content="&lt;" HorizontalAlignment="Left" Margin="821,35,0,0" VerticalAlignment="Top" Width="75" Click="Left_Click"/>

    </Grid>
</Window>
